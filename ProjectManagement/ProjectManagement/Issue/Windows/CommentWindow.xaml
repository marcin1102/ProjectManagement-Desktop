<Window x:Class="ProjectManagement.Issue.CommentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectManagement.Issue"
        mc:Ignorable="d"
        Title="Comment issue" Height="230.057" Width="398.596">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="34*"/>
            <RowDefinition Height="135*"/>
            <RowDefinition Height="30*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Write your comment below" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="0"/>
        <TextBox Name="CommentContent" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="1"  Margin="5,0,5,0"/>
        
        <Button Name="Cancel" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="50,0,0,0" Content="Cancel" Height="20" Width="80" Grid.Row="2" Click="Cancel_Click"/>
        <Button Name="Confirm" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,50,0" Content="Confirm" Height="20" Width="80" Grid.Row="2" Click="Confirm_Click"/>
    </Grid>
</Window>
