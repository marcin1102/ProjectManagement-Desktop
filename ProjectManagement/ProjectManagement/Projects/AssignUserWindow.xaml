<Window x:Class="ProjectManagement.Projects.AssignUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectManagement.Projects"
        mc:Ignorable="d"
        Title="AssignUserWindow" Height="209" Width="354" ResizeMode="NoResize">
    
    <Grid Loaded="Grid_Loaded">
        <TextBlock Text="Assign User" HorizontalAlignment="Center" Height="25" FontSize="18" VerticalAlignment="Top" Margin="0,30,0,0"/>
        <ComboBox Name="Users" HorizontalAlignment="Center" Margin="0,80,55,0" VerticalAlignment="Top" Width="194" DisplayMemberPath="Email" />
        <Button Name="Reload" Content="Reload" Height="22" Width="50" Margin="0,1,50,0" VerticalAlignment="Center" HorizontalAlignment="Right" Click="Reload_Click"/>

        <Button Name="Cancel" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="50,0,0,20" Content="Cancel" Height="25" Width="80" Click="Cancel_Click"/>
        <Button Name="Confirm" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,50,20" Content="Confirm" Height="25" Width="80" Click="Confirm_Click"/>
    </Grid>
</Window>
