<Window x:Class="ProjectManagement.Projects.ProjectsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectManagement.Projects"
        mc:Ignorable="d"
        Title="ProjectsWindow" Height="300" Width="300">
    <Grid>
        <DataGrid x:Name="ProjectsDataGrid" HorizontalAlignment="Left" Height="199" Margin="10,33,0,0" VerticalAlignment="Top" Width="272"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Choose your project" VerticalAlignment="Top" Width="272" TextAlignment="Center"/>
        <Button x:Name="ManageProjectButton" Content="Manage Project" HorizontalAlignment="Left" Margin="152,239,0,0" VerticalAlignment="Top" Width="130"/>
        <Button x:Name="LogOutButton" Content="Log out" HorizontalAlignment="Left" Margin="10,239,0,0" VerticalAlignment="Top" Width="130"/>

    </Grid>
</Window>
